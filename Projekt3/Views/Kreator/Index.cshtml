@using System.Linq
@model List<Projekt3.Models.Pokoj>

@{
    ViewData["Title"] = "Kreator";
}

<h1>Kreator</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<button id="showFormBtn" class="btn btn-primary">Dodaj pomieszczenie</button>

<div id="formDiv" style="display:none; margin-top:20px;">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Nowe pomieszczenie</h4>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="nazwa" class="form-label">Nazwa</label>
                            <input type="text" class="form-control" id="nazwa" name="nazwa" required />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="szacowanaWielkosc" class="form-label">Szacowana wielkość (m²)</label>
                            <input type="number" class="form-control" id="szacowanaWielkosc" name="szacowanaWielkosc" min="1" step="1" required />
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label for="opis" class="form-label">Opis</label>
                    <textarea class="form-control" id="opis" name="opis" rows="3"></textarea>
                </div>

                <div class="form-group mb-4">
                    <label for="zdjecie" class="form-label">Zdjęcie pokoju</label>
                    <input type="file" class="form-control" id="zdjecie" name="zdjecie" accept="image/*" />
                    <small class="form-text text-muted">Wybierz zdjęcie pokoju (opcjonalne)</small>
                </div>

                <div class="card border-info mb-3">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">Punkty lokacji</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label for="latitude" class="form-label">Latitude</label>
                                    <input type="number" step="any" class="form-control" id="latitude" name="latitude" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label for="longitude" class="form-label">Longitude</label>
                                    <input type="number" step="any" class="form-control" id="longitude" name="longitude" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label for="dataPomiaru" class="form-label">Data pomiaru</label>
                                    <input type="date" class="form-control" id="dataPomiaru" name="dataPomiaru" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success">Zastosuj</button>
                </div>
            </form>
        </div>
    </div>
</div>

@if (Model.Count > 0)
{
    <div class="card mt-4">
        <div class="card-header bg-success text-white">
            <h2 class="mb-0">Lista pokoi</h2>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
        <thead>
            <tr>
                <th>Nazwa</th>
                <th>Wielkość</th>
                <th>Opis</th>
                <th>Zdjęcia</th>
                <th>Punkty lokacji</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pokoj in Model)
            {
                <tr>
                    <td>@pokoj.Nazwa</td>
                    <td>@pokoj.SzacowanaWielkosc m²</td>
                    <td>@pokoj.Opis</td>
                    <td>
                        @if (pokoj.Zdjecia != null && pokoj.Zdjecia.Any())
                        {
                            @foreach (var zdjecie in pokoj.Zdjecia.Take(3))
                            {
                                <img src="~/uploads/@zdjecie.NazwaPliku" alt="Zdjęcie pokoju" style="width:80px; height:60px; object-fit:cover; margin-right:5px;" />
                            }
                            @if (pokoj.Zdjecia.Count > 3)
                            {
                                <span class="badge badge-info">+@(pokoj.Zdjecia.Count - 3) więcej</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted">Brak zdjęć</span>
                        }
                    </td>
                    <td>
                        @if (pokoj.PunktyLokacji.Any())
                        {
                            <ul>
                                @foreach (var punkt in pokoj.PunktyLokacji)
                                {
                                    <li>
                                        Lat: @punkt.Latitude,
                                        Lng: @punkt.Longitude,
                                        Data: @punkt.DataPomiaru.ToShortDateString()
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span>Brak punktów</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@pokoj.Id" class="btn btn-warning btn-sm">Edytuj</a>
                        <a asp-action="Delete" asp-route-id="@pokoj.Id" class="btn btn-danger btn-sm"
                           onclick="return confirm('Czy na pewno chcesz usunąć ten pokój?');">
                            Usuń
                        </a>
                    </td>
                </tr>
            }
                </tbody>
                </table>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        document.getElementById("showFormBtn").addEventListener("click", function () {
            document.getElementById("formDiv").style.display = "block";
            this.style.display = "none";
        });
    </script>
}
